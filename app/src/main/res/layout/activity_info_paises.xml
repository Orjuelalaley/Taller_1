<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/grey"
    tools:context=".InfoPaisesActivity">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Imageview"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageViewOverlay"
            tools:ignore="ContentDescription">

        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/namePais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Imageview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="55dp"
            android:text="@string/info_pais"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/namePais_internacional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namePais"
            android:layout_alignStart="@+id/namePais"
            android:layout_marginTop="40dp"
            android:text="@string/info_pais_internacional"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/siglaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namePais_internacional"
            android:layout_alignStart="@+id/namePais"
            android:layout_marginTop="40dp"
            android:text="@string/info_sigla"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/regionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/siglaInfo"
            android:layout_alignStart="@+id/namePais"
            android:layout_marginTop="40dp"
            android:text="@string/info_regiÃ³n"
            android:textSize="30sp" />

</RelativeLayout>
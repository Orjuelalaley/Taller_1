<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".InfoPaisesActivity">

        <TextView
            android:id="@+id/name_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/region_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_pais"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="-148dp"
            android:layout_toStartOf="@+id/name_pais"
            android:gravity="center"
            android:text="region pais"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/region_pais"
            android:layout_marginTop="43dp"
            android:gravity="center"
            android:text="Code"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/flag_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name_pais"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:text="FLAG URL"
            android:textSize="30sp" />
</RelativeLayout>
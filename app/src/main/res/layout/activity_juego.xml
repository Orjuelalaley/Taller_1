<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JuegoActivity">

    <TextView
        android:id="@+id/texto_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adivina el nÃºmero ðŸ˜Ž"
        android:layout_marginTop="200dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/numero_ingresado"
        android:hint="Ingrese el numero"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/texto_inicial" />

    <Button
        android:id="@+id/boton_adivinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="152dp"
        android:text="Adivinar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero_ingresado" />

</androidx.constraintlayout.widget.ConstraintLayout>